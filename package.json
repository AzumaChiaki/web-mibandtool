{
  "name": "web-mibandtool",
  "version": "1.0.0",
  "description": "MiBand Tool Desktop Application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "web": "node server.js",
    "dist": "electron-builder",
    "dist:mac": "electron-builder --mac",
    "dist:win": "electron-builder --win",
    "dist:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.mibandtool.app",
    "productName": "MiBandTool",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.utilities",
      "identity": null,
      "icon": "favicon.png"
    },
    "win": {
      "target": "nsis",
      "icon": "favicon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "favicon.png"
    },
    "files": [
      "**/*",
      "!dist/*",
      "!node_modules/*",
      "node_modules/express/**/*"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DDguan2010/web-mibandtool.git"
  },
  "keywords": [
    "miband",
    "tool",
    "watchface"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/DDguan2010/web-mibandtool/issues"
  },
  "homepage": ".",
  "dependencies": {
    "express": "^5.1.0"
  },
  "devDependencies": {
    "electron": "^39.2.4",
    "electron-builder": "^26.0.12"
  }
}
